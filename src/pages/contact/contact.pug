extends ../../components/layout/layout.pug
include ../../components/breadcrumbs/breadcrumbs.pug
include ../../components/pagination/pagination.pug
include ../../components/social-links/social-links.pug

block page
    - var pageName="contact"
    - var title = 'Contact'
    - var keywords = 'keyword1 keyword1 keyword1 keyword1 keyword1 keyword1 '
    - var description = 'description'
    - var library = "css/library.css"
    - var style = "css/contact.css"
block main
    +breadcrumbs()(class="blog__breadcrumbs")
        +breadcrumbs-item('Home', '/')
        +breadcrumbs-item('Contact')
    .container-fluid.contact__map
        <iframe  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d8917.026651099615!2d-122.41386992042844!3d37.798358402038964!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808580f18d8c6ea7%3A0x5d7f53fb70a3a903!2zNzI1IEdyZWVuIFN0LCBTYW4gRnJhbmNpc2NvLCBDQSA5NDEzMywg0KHQqNCQ!5e0!3m2!1sru!2sru!4v1623304514973!5m2!1sru!2sru" width="100%" height="100%"  style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    .contact__contact-us
        .contact__contact-us-inner.container
            h2.contact__header Contact Us
            .contact__contact-us-content 
                +social-links("contact__social-item")(class="contact__social-links")
                p.contact__text Vexillologist vape microdosing freegan pork belly deep v direct trade cray single-origin coffee street art. Viral shaman mustache master cleanse, pour-over affogato poutine copper mug marfa fanny pack normcore. Lo-fi pop-up banjo portland, echo park hammock
                a.contact__phone(href="tel:+1418297934") (415)  829-7934
                .contact__street 725 Green St
                .contact__city San Francisco, California(CA), 94133
                a.contact__email(href="mailto:ouremailaddress@email.com") ouremailaddress@email.com
                form.contact__form(action="about" method="POST") 
                    input.contact__input(type="text" name="name" placeholder="Your name")
                    input.contact__input(type="text" name="email" placeholder="Your e-mail")
                    textarea.contact__message(name="message" placeholder="Your message")
                    button.contact__submit Send
    include contact-collection-data.pug
    .contact__slider.container-fluid
        .contact__slider-inner 
            each item in contactCollectionData
                a.contact__slider-item(href=item.href)
                    h6.contact__slider-item-header= item.header
                    img.contact__slider-item-img(src= item.src)







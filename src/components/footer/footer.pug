include ../social-links/social-links.pug
mixin footer()
    footer.footer&attributes(attributes)
        .footer__content
            .container
                .footer__content-inner
                    .footer__content-block 
                        h5.footer__header Contact Us
                        p.footer__text Keffiyeh poutine etsy, paleo cray put a bird on it microdosing schlitz you probably occupy
                        a.footer__email(href="mailto:ouremailaddress@email.com") ouremailaddress@email.com
                        form.footer__form(action="POST") 
                            input.footer__form-email(type="text" placeholder="Subscribe by email")
                            button.footer__form-submit(type="submit") Send
                    +social-links("footer__link-item")(class="footer__block-links footer__block-links--social")
                    ul.footer__block-links.footer__block-links--other
                        li.footer__link-item
                            a.footer__link(href="") Delivery
                        li.footer__link-item
                            a.footer__link(href="") FAQ
                        li.footer__link-item
                            a.footer__link(href="") Help
                        li.footer__link-item
                            a.footer__link(href="") More About Us
        .footer__copyright
            .container 
                p.footer__copyright-text 674 Gonzales Drive.   Washington, PA 15301


